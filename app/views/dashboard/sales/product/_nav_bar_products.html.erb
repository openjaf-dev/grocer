<% action = params[:action] %>
<div class="btn-group">
  <button id="menuProductFilters" class="btn btn-default dropdown-toggle" data-toggle="dropdown" type="button">
    <%= action.humanize %>
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="menuProductFilters" role="menu">
    <li>
      <%=link_to :controller => 'dashboard/sales/product',:action => 'by_categories' do %>
          <i class="fa fa-user"></i><span class="text">By Categories</span>
      <% end %>
    </li>
    <li>
      <%=link_to :controller => 'dashboard/sales/product',:action => 'by_brands' do %>
          <i class="fa fa-user"></i><span class="text">By Brands</span>
      <% end %>
    </li>
  </ul>
</div>